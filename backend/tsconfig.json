{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node", "express", "jest"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "src/types/*.d.ts"],
  "exclude": ["node_modules"]
} 